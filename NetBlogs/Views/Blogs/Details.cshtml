@model NetBlogs.Models.Blog

@{
    ViewData["Title"] = "Details";
}

<div align="center" class="mb-5">
    <h1>@Html.DisplayFor(model => model.Title)</h1>
    <h4>@Html.DisplayFor(model => model.Subtitle)</h4>
    <small>@Html.DisplayFor(model => model.Author)<span> | </span>@Html.DisplayFor(model => model.Created)</small>
</div>

<div class="container" style="max-width: 60vw;">
    @foreach (var text in Model.Content.Split("\n"))
    {
        @if(!text.Trim().Equals("")) {
            <p style="text-indent: 3rem;">@text</p>
        }
    }
</div>

<div align="center">
    <small>Last updated @Html.DisplayFor(model => model.LastUpdated)</small>
</div>


<div>
    @if (Model.Author.Equals(User.Identity?.Name))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
        <span> | </span>
    }
    <a asp-action="Index">Back to List</a>
</div>